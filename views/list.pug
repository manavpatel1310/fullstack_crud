doctype html
html
  head
    title Users List
    link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css")
  body
    .container
      h1 Users List
      a(href="/users/add", class="btn btn-success mb-3") Add New User
      table(class="table")
        thead
          tr
            th First Name
            th Last Name
            th Email
            th Actions
        tbody
          each user in users
            tr
              td= user.firstName
              td= user.lastName
              td= user.email
              td
                a(href=`/users/update/${user._id}`, class="btn btn-warning") Edit
                a(href=`/users/delete/${user._id}`, class="btn btn-danger") Delete
