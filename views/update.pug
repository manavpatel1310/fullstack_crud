doctype html
html
  head
    title Update User
    link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css")
  body
    .container
      h1.text-center.mb-4 Update User

      form(action=`/users/update/${user._id}` method="POST" class="w-50 mx-auto")
        .mb-3
          label First Name:
          input(type="text" name="firstName" value=user.firstName class="form-control" required)
        .mb-3
          label Last Name:
          input(type="text" name="lastName" value=user.lastName class="form-control" required)
        .mb-3
          label Date of Birth:
          input(type="date" name="dateOfBirth" value=user.dateOfBirth class="form-control")
        .mb-3
          label Address1:
          input(type="text" name="address1" value=user.address1 class="form-control")
        .mb-3
          label Address2:
          input(type="text" name="address2" value=user.address2 class="form-control")
        .mb-3
          label City:
          input(type="text" name="city" value=user.city class="form-control")
        .mb-3
          label Postal Code:
          input(type="text" name="postalCode" value=user.postalCode class="form-control")
        .mb-3
          label Country:
          input(type="text" name="country" value=user.country class="form-control")
        .mb-3
          label Phone Number:
          input(type="text" name="phoneNumber" value=user.phoneNumber class="form-control")
        .mb-3
          label Email:
          input(type="email" name="email" value=user.email class="form-control" required)
        .mb-3
          label Notes:
          textarea(name="notes" class="form-control")= user.notes
        button(type="submit", class="btn btn-primary") Update User
      a(href=`/users/delete/${user._id}`, class="btn btn-danger mt-3") Delete User
