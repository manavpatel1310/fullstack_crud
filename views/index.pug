doctype html
html
  head
    title User Management
    link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css")
  body
    .container
      h1.text-center.mb-4 User Management System

      // Navbar
      nav.navbar.navbar-dark.bg-dark.mb-4
        .container-fluid
          a.navbar-brand(href="/") Home
          a.navbar-brand(href="/users/add") Add User

      // Users Table
      if users.length
        table(class="table table-striped table-hover")
          thead
            tr
              th First Name
              th Last Name
              th Date of Birth
              th Address
              th City
              th Postal Code
              th Country
              th Phone
              th Email
              th Notes
              th Actions
          tbody
            each user in users
              tr
                td= user.firstName
                td= user.lastName
                td= user.dateOfBirth
                td= user.address1 + ", " + user.address2
                td= user.city
                td= user.postalCode
                td= user.country
                td= user.phoneNumber
                td= user.email
                td= user.notes
                td
                  a(href=`/users/update/${user._id}`, class="btn btn-warning btn-sm") Edit
                  a(href=`/users/delete/${user._i}`, class="btn btn-danger btn-sm") Delete
      else
        p No users found. Click "Add User" to create one.
